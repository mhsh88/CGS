       <ComboBox fx:id="collectorComboBox" GridPane.columnIndex="0" GridPane.rowIndex="3" />


       <TabPane fx:id="runTapPane" minHeight="100" minWidth="200" GridPane.columnIndex="0" GridPane.rowIndex="4" maxWidth="300">
       </TabPane>

      <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#okAction" text="ok" textAlignment="JUSTIFY" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <TextField fx:id="textField" GridPane.rowIndex="6" />
   </children>
